use s "std/slices"
use "std/testing"

#test
fn slicing(t: &testing::T) {
	let headerMap: HeaderMap = {
		ACCEPT: "application/json",
		USER_AGENT: "snapbox",
	}

	let keys: []str = [
		"Accept", "User-Agent",
	]

	sliced := Slice(headerMap)

	for _, k in keys {
		t.Assert(sliced[s::Find(sliced, k)+1] == headerMap[k], "sliced HeaderMap does not match expected")
	}
}